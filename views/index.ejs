<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <a href="/new">Add new post</a>
    <ul>
      <% messages.map((message) => { %>
      <li>User: <%= message.user %></li>
      <li>Message: <%= message.text %></li>
      <li>Added: <%= message.added %></li>
      <a href="">Open</a>
      <hr />
      <% }) %>
    </ul>
  </body>
</html>
